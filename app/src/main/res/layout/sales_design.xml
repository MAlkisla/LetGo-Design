<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSale"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSaleImages"
                android:layout_width="164dp"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#F5F5F5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageViewSalesImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/tesla1" />

                <ImageView
                    android:id="@+id/imageViewBadgeOtoPlus"
                    android:layout_width="48dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="105dp"
                    app:srcCompat="@drawable/otoplus" />

                <ImageView
                    android:id="@+id/imageViewBadgeOneCikan"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="97dp"
                    app:srcCompat="@drawable/onecikan" />

                <Button
                    android:id="@+id/buttonFav"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/white"
                    android:foreground="@drawable/heart_empty"
                    android:foregroundGravity="center"
                    android:foregroundTint="@color/grey"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:translationX="135dp"
                    android:translationY="8dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:text="3.000.000 TL"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSaleImages"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:lines="1"
                android:text="2024 Tesla Model 3 6001 Km"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMoney" />

            <TextView
                android:id="@+id/textViewYearAndKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:text="2024 - 6001 km"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescription" />

            <Button
                android:id="@+id/buttonCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/btnRed"
                android:drawableLeft="@drawable/baseline_call_24"
                android:insetTop="0dp"
                android:insetBottom="22dp"
                android:paddingStart="55dp"
                android:text="Ara"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewYearAndKm" />

            <TextView
                android:id="@+id/textViewcCardLocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="Ankara"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>